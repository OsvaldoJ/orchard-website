@helper MakeNavbarListItem(string name, bool highlight = false)
{
    if (!highlight)
    {
        <li class="@(Request.RawUrl.Contains(name) ? "active" : string.Empty)">
            <a href="/@(name).cshtml">
                @name
            </a>
        </li>
    }
    else
    {
        <li class="@(Request.RawUrl.Contains(name) ? "active" : string.Empty)">
            <a href="/@(name).cshtml">
                <span>@name</span>
            </a>
        </li>
    }
}

